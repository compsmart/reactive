{
  "name": "connectteam-server",
  "version": "1.0.0",
  "description": "ConnectTeam API - Workforce Management Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "lint": "eslint src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "scrape": "npx tsx scripts/scraper.ts",
    "scrape:test": "npx tsx scripts/scraper.ts --test",
    "scrape:jobs": "npx tsx scripts/scraper.ts --jobs",
    "scrape:stats": "npx tsx scripts/scraper.ts --stats"
  },
  "keywords": ["workforce", "management", "contractors", "jobs"],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@google/genai": "^1.0.0",
    "@prisma/adapter-pg": "^6.0.0",
    "@prisma/client": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "tsx": "^4.7.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "nodemon": "^3.1.11",
    "prisma": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
